<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.ListView?>

<BorderPane
	fx:controller = "main.java.de.hhu.propra.view.OberflaecheController"
	xmlns:fx = "http://javafx.com/fxml"
	prefWidth = "800"
	prefHeight = "600">
	<center>
		<HBox spacing = "10">
			<children>
				<BorderPane
					fx:id = "code">
					<padding>
						<Insets top = "10" right = "10" bottom = "10" left = "10"/>
					</padding>
					<top>
						<HBox spacing = "10" alignment="BASELINE_CENTER" >
							<padding>
								<Insets top = "0" right = "0" bottom = "10" left = "0"/>
							</padding>
							<children>
								<Button 
									fx:id = "codePruefen" 
									text = "Code prüfen" 
									maxWidth = "Infinity" 
									HBox.hgrow = "ALWAYS"
									onAction = "#handleCodePruefen"
									disable="true"/>
								<Button 
									fx:id = "codeLeeren" 
									text = "Code leeren" 
									maxWidth = "Infinity" 
									HBox.hgrow = "ALWAYS"
									onAction = "#handleCodeLeeren"
									disable="true"/>
							</children>
						</HBox>
					</top>
					<center>
						<TextArea fx:id = "codeTextArea" text = "code" editable="false" style="-fx-control-inner-background: #555555"/>
					</center>
				</BorderPane>
				
				<BorderPane
					fx:id = "test">
					<padding>
						<Insets top = "10" right = "10" bottom = "10" left = "10"/>
					</padding>
					<top>
						<HBox spacing = "10" alignment="BASELINE_CENTER" >
							<padding>
								<Insets top = "0" right = "0" bottom = "10" left = "0"/>
							</padding>
							<children>
								<Button 
									fx:id = "testPruefen" 
									text = "Tests prüfen" 
									maxWidth = "Infinity" 
									HBox.hgrow = "ALWAYS"
									onAction = "#handleTestPruefen"/>
								<Button 
									fx:id = "testLeeren" 
									text = "Tests leeren" 
									maxWidth = "Infinity" 
									HBox.hgrow = "ALWAYS"
									onAction = "#handleTestLeeren"/>
							</children>
						</HBox>
					</top>
					<center>
						<TextArea fx:id = "testTextArea" text = "test"/>
					</center>
					<bottom>
						<ListView fx:id="fehlgeschlageneTests" maxHeight="100"/>
					</bottom>
				</BorderPane>
			</children>
		</HBox>
	</center>
	<bottom>
		<TextArea fx:id = "konsoleTextArea" editable="false" style="-fx-control-inner-background: #000000"/>
	</bottom>
</BorderPane>