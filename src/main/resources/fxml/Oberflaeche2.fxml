<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="768" prefWidth="1024" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.hhu.propra.view.OberflaecheController">
	<center>
		<HBox spacing="10">
			<children>
				<BorderPane fx:id="code" HBox.hgrow="ALWAYS">
					<padding>
						<Insets bottom="10" left="10" right="10" top="10" />
					</padding>
					<top>
						<HBox alignment="BASELINE_CENTER" spacing="10">
							<padding>
								<Insets bottom="10" left="0" right="0" top="0" />
							</padding>
							<children>
								<Button fx:id="codePruefen" disable="true" maxWidth="Infinity" onAction="#handleCodePruefen" text="Code pr端fen" HBox.hgrow="ALWAYS" />
								<Button fx:id="codePruefenUndWechsel" disable="true" maxWidth="Infinity" onAction="#handleCodePruefenUndWechsel" text="Code pr端fen/Wechsel zu Test" HBox.hgrow="ALWAYS" />
								<Button fx:id="codeLeeren" disable="true" maxWidth="Infinity" onAction="#handleCodeLeeren" text="Code leeren" HBox.hgrow="ALWAYS" />
							</children>
						</HBox>
					</top>
               <center>
                  <TabPane fx:id="codeTab" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER" maxWidth="Infinity" disable="true">
                    <tabs>
                      <Tab text="TestMain">
                           <content>
                              <TextArea fx:id = "codeTextMainArea" text = "code" editable="false" style="-fx-control-inner-background: #555555" />
                           </content>
                      </Tab>
                      <Tab text="TestKlasse">
                           <content>
                              <TextArea fx:id = "codeTextKlasseArea" text = "code" editable="false" style="-fx-control-inner-background: #555555" />
                           </content>
                      </Tab>
                    </tabs>
                  </TabPane>
               </center>
				</BorderPane>
				
				<BorderPane fx:id="test" HBox.hgrow="ALWAYS">
					<padding>
						<Insets bottom="10" left="10" right="10" top="10" />
					</padding>
					<top>
						<HBox alignment="BASELINE_CENTER" spacing="10">
							<padding>
								<Insets bottom="10" left="0" right="0" top="0" />
							</padding>
							<children>
								<Button fx:id="testPruefen" maxWidth="Infinity" onAction="#handleTestPruefen" text="Tests pr端fen" HBox.hgrow="ALWAYS" />
								<Button fx:id="testPruefenUndWechsel" maxWidth="Infinity" onAction="#handleTestPruefenUndWechsel" text="Tests pr端fen/Wechsel zu Code" HBox.hgrow="ALWAYS" />
								<Button fx:id="testLeeren" maxWidth="Infinity" onAction="#handleTestLeeren" text="Tests leeren" HBox.hgrow="ALWAYS" />
							</children>
						</HBox>
					</top>
					<center>
						<TextArea fx:id="testTextArea" maxWidth="Infinity" text="test" />
					</center>
					<bottom>
						<ListView fx:id="fehlgeschlageneTests" maxHeight="100" />
					</bottom>
				</BorderPane>
			</children>
		</HBox>
	</center>
	<bottom>
		<TextArea fx:id="konsoleTextArea" editable="false" style="-fx-control-inner-background: #000000" />
	</bottom>
</BorderPane>
